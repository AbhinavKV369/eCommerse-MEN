<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Truck Haulers Home</title>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<%- include("partials/head") %>

    <body>
        <%- include("partials/navbar") %>

            <div class="container py-5">
                <h1 class="text-center mb-5">Truck Haulers Vehicles</h1>
<div class="row mb-4">
    <form action="/products/filter" method="post">
        <div class="row g-2">
            <div class="col-md-3">
                <input type="text" class="form-control" name="search" placeholder="Search for vehicles..."  value="<%= typeof search !== "undefined" ? search : "" %>">
            </div>
            <div class="col-md-3">
                <select name="category" class="form-select">
                    <option value="">Select Category</option>
                    <option value="lmv">Light Vehicles</option>
                    <option value="mmv">Medium Vehicles</option>
                    <option value="truck">Trucks</option>
                    <option value="bus">Buses</option>
                </select>
            </div>
            <div class="col-md-3">
                <select name="sortBy" class="form-select" >
                    <option value="low-to-high">Price: Low to High</option>
                    <option value="high-to-low">Price: High to Low</option>
                </select>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary w-100">Filter</button>
            </div>
        </div>
    </form>
</div>
                <div class="row">
                    <% products.forEach(product=> { %>
                        <div class="col-md-4 mb-4 product-card">
                            <div class="card">
                                <img src="<%= product.productImage %>" class="card-img-top" alt="Compact Light Vehicle">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= product.name %>
                                    </h5>
                                    <p class="card-text">
                                        <%= product.description %>
                                    </p>
                                    <p><strong>
                                            â‚¹ <%= product.price %>
                                        </strong></p>
                                    <form action="/add-cart" method="post">
                                        <input type="hidden" name="product" value="<%= product.id %>">
                                        <button type="submit" class="btn btn-dark">Add to Cart</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                </div>
            </div>

            <%- include("partials/scrollUp") %>

                <%- include("partials/footer") %>
                    <%- include("partials/scripts") %>
    </body>

</html>