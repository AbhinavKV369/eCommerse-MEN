<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Truck Haulers User Dashboard</title>

  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    .custom-primary-btn {
      background-color: #003366;
      color: white;
      font-weight: bold;
    }

    .custom-primary-btn:hover {
      background-color: #002244;
      color: white;
    }
  </style>
</head>

<body>
  <section class="hero-section bg-light py-5">
    <div class="container">
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">

        <!-- Orders -->
        <div class="col">
          <div class="card text-center shadow-sm">
            <div class="card-body">
              <i class="fas fa-shopping-bag fa-3x mb-3" aria-hidden="true"></i>
              <h5 class="card-title">Orders</h5>
              <p class="card-text">View and manage your orders.</p>
              <a href="/my-orders" class="btn custom-primary-btn">View Orders</a>
            </div>
          </div>
        </div>

        <!-- Cart -->
        <div class="col">
          <div class="card text-center shadow-sm">
            <div class="card-body">
              <i class="fas fa-shopping-cart fa-3x mb-3" aria-hidden="true"></i>
              <h5 class="card-title">Cart</h5>
              <p class="card-text">Check out your cart items.</p>
              <a href="/cart" class="btn custom-primary-btn">Go to Cart</a>
            </div>
          </div>
        </div>

        <!-- Profile -->
        <div class="col">
          <div class="card text-center shadow-sm">
            <div class="card-body">
              <i class="fas fa-user fa-3x mb-3" aria-hidden="true"></i>
              <h5 class="card-title">Profile</h5>
              <p class="card-text">Edit your personal information.</p>
              <a href="/edit-profile" class="btn custom-primary-btn">Edit Profile</a>
            </div>
          </div>
        </div>

        <!-- Change Password -->
        <div class="col">
          <div class="card text-center shadow-sm">
            <div class="card-body">
              <i class="fas fa-key fa-3x mb-3" aria-hidden="true"></i>
              <h5 class="card-title">Change Password</h5>
              <p class="card-text">Change your password.</p>
              <a href="/change-password" class="btn custom-primary-btn">Change Password</a>
            </div>
          </div>
        </div>

        <!-- Delete Account -->
        <div class="col">
          <form action="/delete-account" method="post"
            onsubmit="return confirm('Are you sure you want to delete your account? This action cannot be undone.');">
            <div class="card text-center shadow-sm">
              <div class="card-body">
                <i class="fas fa-trash-alt fa-3x mb-3 " aria-hidden="true"></i>
                <h5 class="card-title">Delete Account</h5>
                <p class="card-text">Delete your account permanently.</p>
                <button type="submit" class="btn btn-danger fw-bold">Delete Account</button>
              </div>
            </div>
          </form>
        </div>

        <!-- Logout -->
        <div class="col">
          <div class="card text-center shadow-sm">
            <div class="card-body">
              <i class="fas fa-sign-out-alt fa-3x mb-3" aria-hidden="true"></i>
              <h5 class="card-title">Logout</h5>
              <p class="card-text">Sign out of your account.</p>
              <a href="/logout" class="btn custom-primary-btn" style="background: #333;">Logout</a>
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- Optional JavaScript: Bootstrap Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>



