<%- include("partials/head") %>

<body>

    <%- include("partials/navbar") %>

    <div class="container p-4">
        <h2>Welcome, Admin</h2>
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card p-3 shadow">
                    <h5>Total Products</h5>
                    <p>50</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card p-3 shadow">
                    <h5>Total Users</h5>
                    <p>120</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card p-3 shadow">
                    <h5>Total Orders</h5>
                    <p>200</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card p-3 shadow">
                    <h5>Total Revenue</h5>
                    <p>$15,000</p>
                </div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-header">
                        <h5>Recent Activity</h5>
                    </div>
                    <div class="card-body">
                        <ul class="recent-activity">
                            <li>New user registered: User123</li>
                            <li>Product "Laptop" added to inventory</li>
                            <li>Order #150 placed by User45</li>
                            <li>Product "Headphones" out of stock</li>
                            <li>Order #151 shipped</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card p-3 shadow">
                    <h5>Analytics</h5>
                    <p>Graph Placeholder</p>
                    <div style="height: 200px; background-color: #000000;"></div> 
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="card p-3 shadow">
                    <h5>Manage Users</h5>
                    <a href="/admin/manage-users" class="btn btn-primary">Go to Users</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-3 shadow">
                    <h5>Manage Products</h5>
                    <a href="/admin/manage-products" class="btn btn-primary">Go to Products</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-3 shadow">
                    <h5>View Orders</h5>
                    <a href="/admin/manage-orders" class="btn btn-primary">Go to Orders</a>
                </div>
            </div>
        </div>
    </div>
    <%- include("partials/scripts") %>

