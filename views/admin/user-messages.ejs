<%- include("partials/head") %>

    <body>
        <%- include("partials/navbar") %>
    <div class="container mt-5">
        <h2 class="text-center ">Admin Panel - User Messages</h2>

        <div class="mb-4">
            <form action="/admin/search-messages" method="post">
                <div class="input-group">
                    <input type="text" class="form-control" name="search" placeholder="Search by subject or sender"
                        aria-label="Search">
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">Search</button>
                    </div>
                </div>
            </form>
        </div>

        <div class="row mt-4">
            <% messages.forEach(message=> { %>
            <div class="col-md-4 mb-3" id="message-card">
           
                    <div class="card" style="height: 100%;">
                        <div class="card-header">
                            <h5 class="card-title"><%= message.email %></h5>
                        </div>
                        <div class="card-body">
                            <h6 class="card-subtitle mb-2 "> <strong>Subject:</strong> <%= message.subject %></h6>
                            <h8 class="card-subtitle mb-2">
                           <strong>Message:</strong> <%= message.message %>
                            </h8>
                            <br>
                            <h8 class="card-subtitle mb-2">
                                <strong>Date:</strong>
                                <%= message.date %>
                            </h8>
                
                            <form action="/admin/delete-message/<%= message._id %>" method="post" class="mt-3">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
             
              
            </div>
<% }); %>
              
        </div>
    </div>

<%- include("partials/scripts") %>
</body>

</html>